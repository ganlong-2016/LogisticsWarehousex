<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.drkj.logisticswarehouse.activity.LoginActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="368px"
            android:layout_height="148px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210px"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:background="#f2f6fa"
            android:orientation="horizontal"
            android:padding="30px">

            <ImageView
                android:layout_width="80px"
                android:layout_height="82px"
                android:src="@drawable/login_phonenumber" />

            <View
                android:layout_width="3px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:background="#dedede" />

            <EditText
                android:id="@+id/text_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:inputType="phone"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="#333537"
                android:textColorHint="#dedede" />

            <ImageView
                android:id="@+id/image_clear"
                android:layout_width="80px"
                android:layout_height="82px"
                android:layout_marginLeft="30px"
                android:src="@drawable/login_clean" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:background="#f2f6fa"
                android:orientation="horizontal"
                android:padding="30px">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="82px"
                    android:src="@drawable/login_password" />

                <View
                    android:layout_width="3px"
                    android:layout_height="50px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:background="#dedede" />

                <EditText
                    android:id="@+id/text_password"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:inputType="number"
                    android:background="@null"
                    android:textColor="#333537" />
            </LinearLayout>

            <Button
                android:id="@+id/button_get_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@drawable/login_button_seletor"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fdfdfe"
                android:textSize="40px"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:background="@drawable/login_button_seletor"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fdfdfd"
            android:textSize="50px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50px"
            android:text="司机版本"
            android:textColor="#dfdfdf" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
